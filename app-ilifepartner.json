{
  "expo": {
    "name": "iLife Partner",
    "description": "This project is really great",
    "slug": "iLife_Partner",
    "privacy": "public",
    "sdkVersion": "32.0.0",
    "platforms": ["ios", "android"],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon2.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "assets/*"
    ],

    "ios": {
          "supportsTablet": true,
          "bundleIdentifier": "com.ilifepartner.app",
          "buildNumber": "1.1.0",
          "infoPlist": {
            "NSLocationWhenInUseUsageDescription": "We need to know your current location to find the near by golfers and courses. Do you allow this app to use location service on this device?",
            "NSCameraUsageDescription": "We need to access to your camera in order to take avatar picture. Do you allow this app to access your camera?",
            "NSPhotoLibraryAddUsageDescription": "We need access to you photo library in order to select photos for avatar and created games. Do allow this app to access you gallery?"
          }
        },


        "android": {
          "package": "com.ilifepartner.app",
          "splash":{
           "resizeMode":"cover",
           "mdpi":"./assets/android-splash/drawable-mdpi/background.png",
           "hdpi":"./assets/android-splash/drawable-hdpi/background.png",
           "xhdpi":"./assets/android-splash/drawable-xhdpi/background.png",
           "xxhdpi":"./assets/android-splash/drawable-xxhdpi/background.png",
           "xxxhdpi":"./assets/android-splash/drawable-xxxhdpi/background.png"
        }

  }
}
}
